using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class Skill_Screen : MonoBehaviour
{
    public Transform skillScreenPosition;

    // Update is called once per frame
    void Update()
    {
        if (skillScreenPosition) MoveToPlayer();
    }

    void MoveToPlayer()
    {
        transform.position = skillScreenPosition.position;
        transform.rotation = skillScreenPosition.rotation;
    }
}
